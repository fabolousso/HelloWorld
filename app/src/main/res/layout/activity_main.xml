<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtOutput"
        android:text="@string/txtOutput" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtInputOne"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/txtOutput"
        android:layout_alignParentStart="true"
        android:hint="@string/strHintInputOne" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtInputTwo"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/txtInputOne"
        android:layout_alignStart="@+id/txtInputOne"
        android:hint="@string/strHintInputTwo" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/strTextMergeInput"
        android:id="@+id/cmdMergeUserInput"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/txtInputTwo"
        android:layout_alignStart="@+id/txtInputTwo" />

</RelativeLayout>
